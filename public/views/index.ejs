<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>VUEJS 實戰 - 5倍商城</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/blog-home.css" rel="stylesheet">
</head>

<body>
<!-- Page Content -->
<div id="cart-app" class="container">

    <div class="row">
        <div id="productShow" class="col-md-8">
            <h1 class="page-header">VUEJS 實戰 -
                <small>5倍商城</small>
            </h1>

            <!-- 商品-->
            <div class="item" v-for="sp in showProduct">
                <h2>{{ sp.name }}</h2>
                <img class="item-img img-responsive" :src="sp.picture" :alt="sp.imageType">
                <p>{{ sp.info}}</p>
                <p class="item-price">$ {{ sp.price}}</p>
                <a class="btn btn-primary " href="#" @click.prevent="doPutCart(sp)">放入購物車
                    <span class="glyphicon glyphicon-chevron-right "></span>
                </a>
            </div>

            <hr>

            <!--Pager -->
            <ul class="pagination">
                <li>
                    <a href="#" aria-label="Previous" @click.prevent="doPrePage()">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li v-for="pp in prePage">
                    <a href="#" @click.prevent="doShowProduct(pp)">{{ pp }}</a>
                </li>
                <li>
                    <a href="#" @click.prevent="doShowProduct(indexPage)">{{ indexPage }}</a>
                </li>
                <li v-for="np in nextPage">
                    <a href="#" @click.prevent="doShowProduct(np)">{{ np }}</a>
                </li>
                <li>
                    <a href="#" aria-label="Next" @click.prevent="doNextPage()">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4 ">

            <div class="well ">
                <h4>商品搜尋</h4>
                <div class="input-group ">
                    <input type="text" class="form-control" v-model="search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" @click="doSearch()"><span class="glyphicon glyphicon-search "></span></button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

            <hr>

            <div class="well cart">
                <h4>購物車</h4>

                <ul class="itemsInCart">
                    <li v-for="cpi in cartProductInfos">
                        <div class="cart-item">
                            <div class="cart-title">{{ cpi.name }}</div>
                            <span class="price">$ {{ cpi.price }}</span> x
                            <span class="count">{{ cpi.amount }}</span>
                            <div class="handler">
                                <a href="#" class="cart-btn plus" @click.prevent="doAddAmount(cpi)">+</a>
                                <a href="#" class="cart-btn minus" @click.prevent="doReduceAmount(cpi)">-</a>
                            </div>
                        </div>
                    </li>
                </ul>
                <hr>
                <p>小計： <span>$ {{ computSubtotale }}</span></p>
            </div>

        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<script src="https://unpkg.com/vue@2.3.4/dist/vue.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="js/index.js"></script>

</body>

</html>